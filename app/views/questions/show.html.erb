<h1><%= @question.title %></h1>
<h4><%= @question.body %></h4>
<h4><%= @question.votes.count %></h4>

<%= form_tag question_answers_path(@question.id) do %>
  <div>
    <%= label_tag :body %><br>
    <%= text_area_tag :body %>
  </div>
  <div>
    <%= submit_tag 'answer' %>
  </div>
<% end %>

<%= render 'answers/answer' %>
