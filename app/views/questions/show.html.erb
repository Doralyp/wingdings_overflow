<h1><%= @question.title %></h1>
<h4><%= @question.body %></h4>
<h4>Karma: <%= @question.karma %></h4>

<%= render partial:"votes/votes", locals: {type: "question_id", id: @question.id} %>

<%= render partial:"comments/form", locals:{id_type: "question_id", id: @question.id} %>

<div class="comments">
  <%= render @question.comments %>
</div>

<%= form_tag question_answers_path(@question.id) do %>
  <div>
    <%= label_tag :body, "Answer" %><br>
    <%= text_area_tag :body %>
  </div>
  <div>
    <%= submit_tag 'Answer' %>
  </div>
<% end %>

<h1>Answers:</h1>
<%= render @question.answers %>